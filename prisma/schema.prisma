// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model with role-based access
model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  role      String    @default("user") // "user" or "admin"
  planId    Int?      @map("plan_id")
  status    String    @default("active") // "active", "suspended", "deleted"
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  accounts  Account[]
  auditLogs AuditLog[]
  plan      Plan?     @relation(fields: [planId], references: [id])

  @@map("users")
}

// Plan model for subscription tiers
model Plan {
  id                Int      @id @default(autoincrement())
  name              String   @unique
  displayName       String   @map("display_name")
  description       String?
  mailboxLimit      Int      @map("mailbox_limit")
  dailyEmailLimit   Int      @map("daily_email_limit")
  monthlyEmailLimit Int      @map("monthly_email_limit")
  price             Decimal  @default(0) @db.Decimal(10, 2)
  isActive          Boolean  @default(true) @map("is_active")
  features          String?  // JSON array of features
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  users             User[]

  @@map("plans")
}

// Account model with user_id for ownership
model Account {
  id                Int      @id @default(autoincrement())
  userId            String?  @map("user_id")
  email             String   @unique
  appPassword       String   @map("app_password")
  senderName        String?  @map("sender_name")
  smtpHost          String   @map("smtp_host")
  smtpPort          Int      @map("smtp_port")
  imapHost          String   @map("imap_host")
  imapPort          Int      @map("imap_port")
  dailyWarmupQuota  Int      @default(2) @map("daily_warmup_quota") // 2-5 emails per day
  warmupStartDate   DateTime? @map("warmup_start_date") // When warmup began for this mailbox
  warmupEnabled     Boolean  @default(true) @map("warmup_enabled") // Whether warmup is active
  warmupMaxDaily    Int      @default(20) @map("warmup_max_daily") // Cap at 10-20 emails/day
  warmupStartCount  Int      @default(3) @map("warmup_start_count") // Start with N emails/day
  warmupIncreaseBy  Int      @default(3) @map("warmup_increase_by") // Increase by N every day
  warmupReplyRate   Int      @default(35) @map("warmup_reply_rate") // Target reply rate % (25-45)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  
  user         User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  sentLogs     Log[]       @relation("SenderLogs")
  receivedLogs Log[]       @relation("RecipientLogs")
  warmupLogs   WarmupLog[]

  @@map("accounts")
}

// Recipient model for dedicated recipient pool
model Recipient {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  isActive  Boolean  @default(true) @map("is_active") // Can be disabled without deletion
  tags      String?  // JSON array for categorization
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("recipients")
}

// SendTemplates for first email
model SendTemplate {
  id        Int      @id @default(autoincrement())
  subject   String
  body      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("send_templates")
}

// ReplyTemplates for auto-replies
model ReplyTemplate {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("reply_templates")
}

// Old Template model (kept for backward compatibility)
model Template {
  id        Int      @id @default(autoincrement())
  subject   String
  body      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("templates")
}

// Log model with relations
model Log {
  id          Int      @id @default(autoincrement())
  timestamp   DateTime @default(now())
  senderId    Int?     @map("sender_id")
  recipientId Int?     @map("recipient_id")
  sender      String
  recipient   String
  subject     String
  status      String
  notes       String?
  createdAt   DateTime @default(now()) @map("created_at")

  senderAccount    Account? @relation("SenderLogs", fields: [senderId], references: [id], onDelete: SetNull)
  recipientAccount Account? @relation("RecipientLogs", fields: [recipientId], references: [id], onDelete: SetNull)

  @@map("logs")
}

// WarmupLog model for tracking daily warmup activity
model WarmupLog {
  id          Int      @id @default(autoincrement())
  mailboxId   Int      @map("mailbox_id")
  date        DateTime @db.Date
  dayNumber   Int      @map("day_number") // Days since warmup start
  sentCount   Int      @map("sent_count") @default(0)
  repliedCount Int     @map("replied_count") @default(0)
  dailyLimit  Int      @map("daily_limit") // What the limit was for this day
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  mailbox Account @relation(fields: [mailboxId], references: [id], onDelete: Cascade)

  @@unique([mailboxId, date])
  @@map("warmup_logs")
}

// Audit Log model for tracking admin actions
model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    String   @map("user_id")
  action    String   // "user_created", "user_updated", "user_deleted", "user_suspended", "user_reactivated"
  targetId  String?  @map("target_id") // ID of affected user
  details   String?  // JSON string with details
  ipAddress String?  @map("ip_address")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("audit_logs")
}

// Scheduled Reply model for deferred reply execution
model ScheduledReply {
  id            Int       @id @default(autoincrement())
  accountId     Int       @map("account_id")
  recipientId   Int?      @map("recipient_id")
  recipientEmail String   @map("recipient_email")
  subject       String
  body          String    @db.Text
  scheduledFor  DateTime  @map("scheduled_for") // When to send the reply
  status        String    @default("pending") // "pending", "sent", "failed"
  metadata      Json?     // Store original message ID and other data
  sentAt        DateTime? @map("sent_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@index([scheduledFor, status])
  @@index([accountId])
  @@map("scheduled_replies")
}

// Global Rate Limit tracking
model RateLimitLog {
  id        Int      @id @default(autoincrement())
  timeSlot  DateTime @map("time_slot") // Hourly or minute slot
  count     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([timeSlot])
  @@index([timeSlot])
  @@map("rate_limit_logs")
}
